#menu-toggle
  cursor pointer
  position absolute
  right 20px
  top 3px
  +below(rupture.desktop-cutoff)
    display block
  +above(rupture.desktop-cutoff)
    display none
  &:before
    content '\f0c9'
    font 42px fontawesome

#menu
  position absolute
  overflow hidden
  right 0
  transition all .5s
  +below(rupture.desktop-cutoff)
    reset-list()
    max-height 0
    top header-height
    text-align right
    background-color white
    a
      width 150px
      padding-right 20px
  +above(rupture.desktop-cutoff)
    center-vertically()
    max-height 200px
    inline-list 40px
  &.menu-visible
    max-height 200px

.nav-link
  reset-link()
  font-size 1.8rem
  position relative
  display inline-block
  padding 8px 0
  +above(rupture.desktop-cutoff)
    &::after
      position absolute
      top 100%
      left 0
      width 100%
      height 2px
      background rgba(0,0,0,0.2)
      content ''
      opacity 0
      transition opacity 0.3s, transform 0.3s
      transform translateY(10px)
    &:hover::after
    &:focus::after
    &.active::after
      opacity 1
      transform translateY(-5px)