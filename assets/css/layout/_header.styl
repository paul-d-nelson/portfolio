.main-header
  position fixed
  top 0
  left 0
  height header-height
  width 100%
  overflow hidden
  background-color transparent
  transition all 0.5s
  &.scrolled
    background-color header-background

.logo
  center-vertically()
  left 20px
  font-size 1.8rem
  a
    reset-link()
    h1
      margin 0

#menu-toggle
  +below(rupture.desktop-cutoff)
    display block
  +above(rupture.desktop-cutoff)
    display none

#nav
  center-vertically()
  right 20px
  ul
    inline-list 40px

.nav-link
  reset-link()
  font-size 1.8rem
  position relative
  display inline-block
  padding 8px 0
  &::after
    position absolute
    top 100%
    left 0
    width 100%
    height 2px
    background rgba(0,0,0,0.2)
    content ''
    opacity 0
    transition opacity 0.3s, transform 0.3s
    transform translateY(10px)
  &:hover::after
  &:focus::after
  &.active::after
    opacity 1
    transform translateY(-5px)