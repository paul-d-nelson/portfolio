center-vertically()
  position absolute
  top 50%
  transform translateY(-50%)

center-both()
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)

icon-left(icn)
  padding-left: 5px
  &:before
    content: icn
    font-family: FontAwesome
    font-style: normal
    font-weight: normal
    text-decoration: inherit
    position: relative
    right: 5px

aspect-ratio(aspect)
  &:before
    padding-top: aspect
    content: ''
    display: block