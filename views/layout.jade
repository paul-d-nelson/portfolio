doctype html
html

  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name='description', content='The personal portfolio of Paul Nelson, a web developer in Arizona specializing in responsive WordPress theme development.')
    meta(name='author', content= "Paul Nelson")
